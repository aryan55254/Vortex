{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* If NOT transpiling with SWC or esbuild */
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,

    /* If your code runs in the DOM */
    // "lib": ["es2022", "dom", "dom.iterable"],
  }
}